<?xml version="1.0"?>
<openerp>
    <data>

        <record id="email_template_form" model="ir.ui.view">
            <field name="name">view.order.form.moralesrosas</field>
            <field name="model">email.template</field>
            <field name="inherit_id" ref="email_template.email_template_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='reply_to']" position="after">
                    <field name="create_reservation"/>
                    <field name="update_reservation"/>
                </xpath>

            </field>
        </record>

    </data>
</openerp>
