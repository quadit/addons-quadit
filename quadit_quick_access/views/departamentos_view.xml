<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_res_departamentos_form">
            <field name="name">view.res.departamentos.form</field>
            <field name="model">res.departamentos</field>
            <field name="arch" type="xml">
                <form string="Departamentos">
                    <group>
                        <field name="image" widget="image"/>
                    </group>
                    <group>
                        <field name="unidad"/>
                        <field name="codigo"/>
                        <field name="name"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_res_departamentos_tree">
            <field name="name">view.res.departamentos.tree</field>
            <field name="model">res.departamentos</field>
            <field name="arch" type="xml">
                <tree string="Departamentos">
                        <field name="unidad"/>
                        <field name="codigo"/>
                        <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="res_departamentos_action">
                <field name="name">Departamentos</field>
                <field name="res_model">res.departamentos</field>
                <field name="view_type">form</field>
                <field name="view_mode">tree,form</field>
        </record>

        <menuitem
                action="res_departamentos_action"
                name="Departamentos"
                id="menu_departamentos"
                parent="menu_catalog"
                sequence="7"/>


</data>
</openerp>
